{% extends 'base.html.twig' %}

{% block title %}Détails de l'événement{{ event.id }}{% endblock %}

{% block body %}
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-8 text-center heading-section ftco-animate">
                <h2 class="mb-4">Détails de l'événement {{ event.id }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="speaker-wrap ftco-animate d-flex">
                    <div class="img speaker-img" style="background-image: url({{ asset('images/' ~ event.image) }});"></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="ftco-search">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row">Titre</th>
                                <td>{{ event.titre }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Description</th>
                                <td>{{ event.description }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Lieu</th>
                                <td>{{ event.lieu }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Date</th>
                                <td>{{ event.date ? event.date|date('d/m/Y H:i') : '' }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Coach</th>
                                <td><a href="{{ path('app_detail2page', {id: event.coach.id}) }}">{{ event.coach.nom }}</a></td>
                            </tr>

                        </tbody>
                    </table>
                    
                    <a href="{{ path('add_panier',{id: event.id}) }}" class="btn btn-primary">🛒ajouter panier</a>
                    {% if is_granted('ROLE_COACH') %}
                        <a href="{{ path('event.edit', {'id': event.id}) }}" class="btn btn-primary">🖊️Editer</a>
                        <a href="{{ path('event.delete', {'id': event.id}) }}" class="btn btn-primary">🧹supprimer</a>
                    {% endif %}
                    
                </div>
            </div>
        </div>
    </div>
</section>
<h1 style="padding-top: 200px; text-align: center;"> </h1>
{% endblock %}
