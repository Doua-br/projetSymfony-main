                            <tr>
                                <th scope="row">Specialit√©</th>
                                <td>{{ coach.specialite }}</td>
                            </tr>
                        </tbody>
                    </table>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('coach.edit', {'id': coach.id}) }}" class="btn btn-primary">üñäÔ∏èEditer</a>
                        <a href="{{ path('coach.delete', {'id': coach.id}) }}" class="btn btn-primary">üßπsupprimer</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
