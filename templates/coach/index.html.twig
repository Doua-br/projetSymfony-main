{% extends 'base.html.twig' %}

{% block body %}
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <h2><span>Nos</span> Coachs</h2>
            </div>
        </div>
        <div class="row">
            {% for coach in coachs %}
            <div class="col-md-4">
                <div class="card mb-4 border-0 rounded-0 shadow-sm">
                    <div class="card-img-top rounded-circle overflow-hidden" style="width: 150px; height: 150px; margin: 0 auto;">
                        <img src="{{ asset('images/' ~ coach.image) }}" class="img-fluid" alt="{{ coach.nom }}">

                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ coach.nom }}</h5>
                        <p class="card-text">{{ coach.specialite }}</p>
                        <a href="{{ path('app_detail2page', {id: coach.id}) }}" class="btn btn-primary">DÃ©tails</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
